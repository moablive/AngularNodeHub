// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020", // Versão do JavaScript que será gerada
    "module": "commonjs", // Sistema de módulos a ser usado
    "rootDir": "./src", // Pasta raiz dos seus arquivos .ts
    "outDir": "./dist", // Pasta onde o JavaScript compilado será salvo
    "esModuleInterop": true, // Permite compatibilidade com módulos CommonJS
    "forceConsistentCasingInFileNames": true, // Garante que os nomes dos arquivos sejam consistentes
    "strict": true, // Habilita todas as verificações de tipo estritas
    "skipLibCheck": true, // Pula a verificação de tipos dos arquivos de declaração (.d.ts)
    "sourceMap": true, // Gera source maps para facilitar o debug
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"], // Quais arquivos incluir na compilação
  "exclude": ["node_modules"] // Quais arquivos excluir
}